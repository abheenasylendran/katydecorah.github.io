---
layout: none
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
	<channel>
		<title>{{ site.name }}</title>
		<description>{{ site.description }}</description>
		<link>http://katydecorah.com</link>
		<pubDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
    	<lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}</lastBuildDate>
		{% for post in site.posts limit:10 %}
			<item>
				<title>{{ post.title }}</title>
				<description>{% if post.updated %}Updated {{ post.updated | date: "%B %d, %Y" }}:{% endif %} {{ post.content | xml_escape }}</description>
				<pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}</pubDate>
				<link>{% if post.category == 'playlists' %}{{ post.rdio }}{% else %}http://katydecorah.com{{ post.url }}{% endif %}</link>
				{% for tag in post.tags %}<category>{{ tag | xml_escape }}</category>
        		{% endfor %}{% for cat in post.categories %}<category>{{ cat | xml_escape }}</category>
        		{% endfor %}<guid isPermaLink="true">{% if post.category == 'playlists' %}{{ post.rdio }}{% else %}http://katydecorah.com{{ post.url }}{% endif %}</guid>
			</item>
		{% endfor %}
	</channel>
</rss>
