---
fourteen: '#1abc9c'
thirteen: '#9b59b6'
---
{
  "type": "FeatureCollection",
  "features": [{% assign places = (site.posts | where: "category", "adventures") %}{% for place in places %}{% assign type = place.coordinates | size %}{% capture year %}{{place.date | date: "%Y"}}{% endcapture %}
    {
      "type": "Feature",
      "properties": {
        "title": "{{ place.title }}",
        "image": "{{ place.image }}",
        "url": "{{site.url}}{{place.url}}",
        "year": "{{ year }}",
        "marker-size": "medium",
        {% if  place.tags contains 'yay' %}"marker-symbol": "star",{% elsif place.tags contains 'hiking' or place.tags contains 'fresh air' %}"marker-symbol":"park",{% elsif place.tags contains 'friends' or place.tags contains 'family' %}"marker-symbol": "heart",{% elsif place.tags contains 'music' %}"marker-symbol": "music",{% elsif place.tags contains 'road trip' %}"marker-symbol": "car",{% endif %}
        {% case year %}{% when '2014' %}"marker-color": "{{page.fourteen}}"
        {% when '2013' %}"marker-color": "{{page.thirteen}}"{% endcase %}
      },
      "geometry": { {% case type %}{% when 1 %}
        "type": "Point",
        "coordinates": [{{ place.coordinates }}]{% else %}
        "type": "MultiPoint",
        "coordinates": [ {% for coord in place.coordinates %}
          [{{coord}}]{% if forloop.last != true %},{% endif %}{% endfor %}
        ]{% endcase %}
      }
    }{% if forloop.rindex > 1 %},{% endif%}{% endfor %}
  ]
}
